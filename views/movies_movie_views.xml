<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_movies_movie_tree" model="ir.ui.view">
        <field name="name">movies.movie.tree</field>
        <field name="model">movies.movie</field>
        <field name="arch" type="xml">
            <list string="Pel·lícules">
                <field name="title"/>
                <field name="year" widget="char"/>               
                <field name="director"/>
                <field name="recaptacio_euros" sum="Total Euros"/>
            </list>
        </field>
    </record>

    <record id="view_movies_movie_form" model="ir.ui.view">
        <field name="name">movies.movie.form</field>
        <field name="model">movies.movie</field>
        <field name="arch" type="xml">
            <form string="Pel·lícula">
                <sheet>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="year" widget="char"/>
                            <field name="platform"/> 
                            <field name="theme"/>
                            <field name="original_title"/>
                            <field name="average_rating" readonly="1"/> 
                            <field name="hash_code" readonly="1"/> 
                        </group>
                        <group>
                            <field name="director"/>
                            <field name="country_id" string="País base" options="{'no_create': True}"/>
                            <field name="recaptacio_dolars"/>
                            <field name="recaptacio_euros" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sinopsi">
                            <field name="synopsis"/>
                        </page>
                        <page string="Opinions">
                            <field name="view_ids">
                                <list editable="bottom">
                                    <field name="view_date"/>
                                    <field name="rating" avg="Nota Mitjana"/>
                                    <field name="review"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>